{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "WebWorker"],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    /* add these two lines */
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },

    /* so `expect` is typed if you *keep* tests in the build */
    "types": ["vite/client", "vitest/globals"]
  },

  /* limit the TS build to the app code only */
  "include": ["src", "vite-env.d.ts"],
  "exclude": [
    "node_modules",
    "supabase/**",          /* ⛔️ exclude Deno functions */
    "**/__tests__/**",      /* ⛔️ exclude tests from build */
    "**/*.test.*"           /* ⛔️ exclude tests from build */
  ]
}
